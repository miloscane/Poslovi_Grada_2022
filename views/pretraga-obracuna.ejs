<%- include ("partials/header") -%>
<%- include ("partials/menu") -%>
<div class="pageTitle">Pronađi ucinak po broju naloga</div>
<div class="nadjiNalog">
	<form method="post" action="/nadji-ucinak-broj" id="form-broj">
		<input type="text" name="broj" id="form-broj-value">
	</form>
	<div class="button" onclick="submitBrojForm()" style="margin-top:20px;">Pronađi po broju</div>
	<div style="margin:30px auto;height:1px;background-color:rgb(50,50,50)"></div>
	<div class="pageTitle">Pronađi nalog po adresi</div>
	<form method="post" action="/nadji-ucinak-datum" id="form-datum">
		<input type="date" name="datum" id="form-datum-value">
	</form>
	<div class="button" onclick="submitDatumForm()" style="margin-top:20px;">Pronađi po datumu</div>
	<div style="margin:30px auto;height:1px;background-color:rgb(50,50,50)"></div>
	<form method="post" action="/nadji-ucinak-majstor" id="form-majstor">
		<select id="majstor" name="majstor"></select>
		<script>
			var majstori = <%-JSON.stringify(majstori)%>;
			for(var i=0;i<majstori.length;i++){
				if(!majstori[i].inactive){
					var option = document.createElement("OPTION");
					option.setAttribute("value",majstori[i].uniqueId);
					option.innerHTML	=	majstori[i].ime;
					if(podizvodjaci.indexOf(majstori[i].uniqueId)<0){
						document.getElementById("majstor").appendChild(option);
					}
				}
			}
		</script>
	</form>
	<div class="button" onclick="submitMajstorForm()" style="margin-top:20px;">Pronađi po majstoru</div>
	<script>
		function submitBrojForm(){
			if(document.getElementById("form-broj-value").value){
				loadGif();
				document.getElementById("form-broj").submit();
			}else{
				alert("Nije unet broj naloga za pretragu");
			}
		}

		function submitDatumForm(){
			if(document.getElementById("form-datum-value").value){
				loadGif();
				document.getElementById("form-datum").submit();
			}else{
				alert("Nije unet datum za pretragu");
			}
		}

		function submitMajstorForm(){
			if(document.getElementById("majstor").value){
				loadGif();
				document.getElementById("form-majstor").submit();
			}else{
				alert("Nije unet majstor za pretragu");
			}
		}
	</script>
</div>
<%- include ("partials/footer") -%>